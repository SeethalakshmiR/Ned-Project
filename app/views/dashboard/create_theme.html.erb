<div class="ibox">
  <div class="ibox-body">
    <%= form_with(model: @app_details, url: save_theme_path, method: :post, local: true, class: "form-horizontal") do |form| %>
      <%= form.button '<i class="fa fa-check"></i> Save'.html_safe, class: 'btn btn-info' %>
      <%= link_to '<i class="fa fa-close"></i> Cancel'.html_safe, customer_dashboard_path, class: 'btn btn-default' %>
      <%= link_to '<i class=""></i> Versions'.html_safe, customer_dashboard_path, class: 'btn btn-default' %>
      <%= link_to '<i class=""></i> Advanced'.html_safe, customer_dashboard_path, class: 'btn btn-default' %>
        <div class="clf">
          <ul class="nav nav-tabs ">
            <li class="nav-item"><br>
              <a class="nav-link active" href="#tab-2-1" data-toggle="tab">Content</a>
            </li>
            <li class="nav-item"><br>
              <a class="nav-link" href="#tab-2-2" data-toggle="tab"> Publishing</a>
            </li>
          </ul>
            <div class="tab-content">
              <div class="tab-pane fade show active" id="tab-2-1">
                <div class="form-group row">
                  <%= form.label 'Title *', class: 'col-sm-2 col-form-label' %>
                  <div class="col-sm-6 form-group">
                    <%= form.text_field :title, required: true, class: 'form-control copy-to-alias', id: 'title' %>
                  </div>
                </div>
                <div class="form-group row">
                  <%= form.label 'Alias', class: 'col-sm-2 col-form-label' %>
                  <div class="col-sm-6 form-group">
                    <%= form.text_field :alias, class: 'form-control', id: 'alias', required: true, autocomplete: 'title' %>
                  </div>
                </div>
                <div id="editor-container">
                  <textarea id="editor" name="editor" ></textarea>
                </div>
                <div id="text-area-container" style="display: none;">
                  <%= form.text_area :introtext, id: "introtext", rows: 14, cols: 200 %>
                </div>
                <% end %>
              </div>

              <div class="tab-pane" id="tab-2-2">
              </div>
            </div>
        </div>
    <div class="form-group d-flex justify-content-between">
      <div class="input-group-icon right"></div>
        <%= button_tag 'Toggle Editor', id: 'toggle-editor'  %>
    </div>
  </div>
</div> 